<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- point 8 - Please add the automated action for sending mail to responsible(salesperson) of sale order when the delivery order is delivered. -->
        <record id="ir_cron_notify_salesperson_do_done" model="ir.cron">
            <field name="name">Notify Salesperson When Delivery is Done</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">model.cron_notify_salesperson_delivery_done()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
