<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- point 8 - Please add the automated action for sending mail to responsible(salesperson) of sale order when the delivery order is delivered. -->
        <record id="delivery_done_email_template" model="mail.template">
            <field name="name">Delivery Done Notification</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">Delivery Completed for {{object.origin}}</field>
            <field name="email_to">{{object.sale_id.user_id.email}}</field>
            <field name="body_html">
            <![CDATA[
            <p>Hello <t t-out="object.sale_id.user_id.name or ''"></t>,</p>
            <p>The delivery for Sale Order <strong><t t-out="object.origin or ''"></t></strong> has been completed.</p>
            <p>Regards,<br/>Odoo System</p>
            ]]>
            </field>
        </record>
    </data>
</odoo>
