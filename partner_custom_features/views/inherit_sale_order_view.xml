<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- point 11 - Default Search Filter: Replace the default filter My Quotations with Sales Orders to display confirmed and done orders by default. -->
    <record id="sale.action_quotations_with_onboarding" model="ir.actions.act_window">
        <field name="context">{'search_default_sales_orders': 1}</field>
    </record>

    <!-- Add custom filter to the search view -->
    <record id="view_order_filter_custom" model="ir.ui.view">
        <field name="name">sale.order.custom.search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <!-- Insert the filter inside the <search> element -->
            <xpath expr="//search" position="inside">
                <filter string="Sales Orders" name="sales_orders" domain="[('state', 'in', ('sale','done'))]" />
            </xpath>
        </field>
    </record>
</odoo>
